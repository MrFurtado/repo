# EX3.1

hours = float(raw_input("Enter Hours: "))
rate = float(raw_input("Enter Rate: "))
pay = hours * rate


if hours <= 40:
    print 'Pay: %d' % pay
else:
    overtime = hours - 40
    ot_rate = rate * 40 + (1.5 * rate) * overtime
    print "Pay: %d" % ot_rate
